@{
    ViewBag.Title = "Échafaudages";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model PagedList.IPagedList<Batibatlocation.Models.Echafaudage>
@using PagedList.Mvc
@using PagedList

<h3>Échafaudages</h3>
<div class="text-right mb-3">
    <a href="@Url.Action("CreateEchafaudage", "Admin")" class="btn btn-success">
        <i class="fas fa-plus"></i> Ajouter un Échafaudage
    </a>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Périodicité</th>
                <th>Prix</th>
                <th>Visible</th>
                <th>Image Principal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var echafaudage in Model)
            {
                <tr>
                    <td>@echafaudage.Id</td>
                    <td>@echafaudage.Nom</td>
                    <td>@echafaudage.Periodicite.Nom</td>
                    <td>@echafaudage.Prix €</td>
                    <td>                        
                        <i class="fas @(echafaudage.Visible ? "fa-eye" : "fa-eye-slash")"
                            data-id="@echafaudage.Id"
                            data-visible="@echafaudage.Visible"
                            onclick="toggleVisibility(this)"></i>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(echafaudage.ImageUrl))
                        {
                            <img src="@echafaudage.ImageUrl" alt="@echafaudage.Nom" style="max-width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>Aucune image</span>
                        }
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton-@echafaudage.Id" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-cog"></i>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton-@echafaudage.Id">
                                <a class="dropdown-item" href="@Url.Action("DetailsEchafaudage", "Admin", new { id = echafaudage.Id })">Détails</a>
                                <a class="dropdown-item" href="@Url.Action("EditEchafaudage", "Admin", new { id = echafaudage.Id })">Modifier</a>
                                @using (Html.BeginForm("DeleteEchafaudage", "Admin", new { id = echafaudage.Id, page = Model.PageNumber }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet échafaudage ?')">
                                        Supprimer
                                    </button>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="pagination-container">
    @Html.PagedListPager(Model, page => Url.Action("Echafaudages", new { page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new List<string> { "page-link" },
            UlElementClasses = new List<string> { "pagination" },
            LinkToFirstPageFormat = "«« Première",
            LinkToPreviousPageFormat = "« Précédente",
            LinkToNextPageFormat = "Suivante »",
            LinkToLastPageFormat = "Dernière »»",
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
            DisplayLinkToLastPage = PagedListDisplayMode.Never,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 5,
            DisplayEllipsesWhenNotShowingAllPageNumbers = true,
            EllipsesFormat = "...",
        })
</div>