@model Batibatlocation.Models.Echafaudage

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Détails Échafaudage</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Assicurati di avere un file CSS moderno -->
    <style>
        .container-echafaudage {
            background: #ced4da;
            padding: 25px;            
        }

        .details-container {
            display: flex;
            align-items: stretch; /* Assicura che i figli si stirendano per avere la stessa altezza */
            margin-top: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .image-container {
            width: 40%;
            margin-right: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }

            .image-container img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
                display: block;
            }

        .info-container {
            width: 60%;
        }

            .info-container h2 {
                margin-bottom: 10px;
                color: #333;
            }

            .info-container dl {
                margin-bottom: 20px;
            }

            .info-container dt {
                font-weight: bold;
                margin-top: 10px;
                color: #555;
            }

            .info-container dd {
                margin-bottom: 10px;
                color: #777;
            }

        .reserve-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
            border: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

            .reserve-button:hover {
                background-color: #45a049;
            }

        .specifications-container {
            margin-top: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .specifications-container h3 {
                margin-bottom: 10px;
                color: #333;
            }

        .gallery-container {
            margin-top: 20px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .gallery {
            display: flex;
            gap: 10px;
            overflow-x: auto;
            scroll-behavior: smooth;
        }

            .gallery img {
                width: 200px; /* Larghezza fissa per le immagini nella galleria */
                height: auto;
                border-radius: 8px;
                display: block;
                transition: transform 0.3s ease;
            }

                .gallery img:hover {
                    transform: scale(1.05);
                }

        .owl-carousel .item img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container container-echafaudage">
        <div class="details-container">
            <div class="image-container">
                <div class="owl-carousel owl-theme">
                    <div class="item"><img src="@Model.ImageUrl" alt="@Model.Nom" /></div>
                    <div class="item"><img src="/images/echafaudage1_2.jpg" alt="@Model.Nom - Vue 2" /></div>
                    <div class="item"><img src="/images/echafaudage1_3.jpg" alt="@Model.Nom - Vue 3" /></div>
                    <div class="item"><img src="/images/echafaudage1_4.jpg" alt="@Model.Nom - Vue 4" /></div>
                    <div class="item"><img src="/images/echafaudage1_5.jpg" alt="@Model.Nom - Vue 5" /></div>
                </div>
            </div>
            <div class="info-container">
                <h2>@Model.Nom</h2>
                <dl class="dl-horizontal">
                    <dt>Description:</dt>
                    <dd>@Model.Description</dd>
                    <dt>Prix:</dt>
                    <dd>@Model.Prix €</dd>
                    <dt>Disponibilité:</dt>
                    <dd>@(Model.Disponible ? "Disponible" : "Non disponible")</dd>
                </dl>
                <a href="@Url.Action("CreateReservation", "Echafaudage", new { echafaudageId = Model.Id })" class="reserve-button">Réserver</a>
            </div>
        </div>
        <div class="specifications-container">
            <h3>Spécifications Techniques</h3>
            <p>@Model.SpecificheTechniques</p>
        </div>
        <div class="gallery-container">
            <h3>Galerie d'Images</h3>
            <div class="gallery">
                <img src="@Model.ImageUrl" alt="@Model.Nom" />
                <img src="/images/echafaudage1_2.jpg" alt="@Model.Nom - Vue 2" />
                <img src="/images/echafaudage1_3.jpg" alt="@Model.Nom - Vue 3" />
                <img src="/images/echafaudage1_4.jpg" alt="@Model.Nom - Vue 4" />
                <img src="/images/echafaudage1_5.jpg" alt="@Model.Nom - Vue 5" />
            </div>
        </div>
    </div>
</body>
</html>